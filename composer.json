{
    "name": "php-kitchen/code-specs-core",
    "description": "Core module of CodeSpecs - BDD extension for PHPUnit and Codeception that allows to write tests as a specifications in a human-readable format.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "CodeSpecs",
        "Codeception",
        "BDD",
        "tests",
        "tester",
        "extension",
        "unit tests"
    ],
    "authors": [
        {
            "name": "Dmitry Kolodko",
            "email": "prowwid@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PHPKitchen\\CodeSpecsCore\\": "src",
            "Tests\\": "tests"
        }
    }
}
